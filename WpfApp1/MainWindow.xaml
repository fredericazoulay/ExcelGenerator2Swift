<Window x:Class="ExcelGenerator2SwiftApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelGenerator2SwiftApp"
        mc:Ignorable="d"
        Title="ExcelGenerator2Swift - v1.00" Height="686.381" Width="1192.218"
        Icon="favico.ico"
        Background="Black">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="107*"/>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="68*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="34*"/>
                <RowDefinition Height="13*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="48*"/>
                <ColumnDefinition Width="416*"/>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="385*"/>
                <ColumnDefinition Width="14*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="137*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Name="CompanyName" Text="Informatique CDC - Projet SIGMA - Swift" Grid.Column="4" FontSize="24" FontWeight="Bold" Foreground="Red" Grid.ColumnSpan="4" TextWrapping="Wrap" TextAlignment="Center" TextDecorations="{x:Null}" FontStyle="Italic" Grid.Row="1"  />

            <!-- <Image Grid.Column="2" Source="Images/icdc.png" Grid.Row="1" HorizontalAlignment="Left"/>-->
            <Button Name="About" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Click="OnClickAbout">
                <Image Source="Images/icdc.png"></Image>
            </Button>
            
            <!-- <Label Content="File : " Grid.Row="3" Grid.Column="1" Foreground="Red" FontWeight="Bold"/> -->
            <TextBlock Text="File : " Grid.Row="3" Grid.Column="1" Foreground="Red" TextDecorations="Underline" FontWeight="Bold"/>
            <TextBox Name="txbPathExcelFile" Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Text="C:\Developpement\Tests_dev\TestSwift.xlsx" Grid.ColumnSpan="6" FontWeight="Bold"/>
            <DataGrid Name="dataGrid_1" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="6" Grid.RowSpan="6"/>
            <Button Name="btnBrowse_1" Content="..." Grid.Column="9" Grid.Row="3" Click="btnBrowseExcelFile_Click" Background="#FFE2E220" FontWeight="Bold" ToolTip="Browser to select the Excel file"/>
            <Button Name="btnRead_1" Content="Read Excel file" Grid.Column="9" Grid.Row="5" Click="btnRead_1_Click" Background="#FF77E67C" Grid.RowSpan="2" FontWeight="Bold" ToolTip="Read the Excel file" />
            <Button Name="btnGenerate_1" Content="Generate Swift files" Grid.Column="9" Grid.Row="8" Click="btnGenerate_1_Click" Background="#FF66B4EA" Grid.RowSpan="2" FontWeight="Bold" ToolTip="Write text file according the Excel file" />



            
            <!-- <Label Grid.Row="12" Content="Path :" Grid.Column="1" Foreground="Red" FontWeight="Bold"/> -->
            <TextBlock Text="Path : " Grid.Row="12" Grid.Column="1" Foreground="Red" TextDecorations="Underline" FontWeight="Bold"/>
            <TextBox x:Name="txbPathDirectory" Grid.Column="2" Grid.Row="12" TextWrapping="Wrap" Text="C:\Developpement\Tests_dev\" Grid.ColumnSpan="3" FontWeight="Bold"/>
            <Button x:Name="btnBrowse_2" Content="..." Grid.Column="9" Grid.Row="12" Click="btnBrowsePath_Click" Background="#FFE2E220" FontWeight="Bold" ToolTip="Browser to select the folder with text files"/>
            <Button x:Name="btnRead_2" Content="Read Text files" Grid.Column="9" Grid.Row="14" Click="btnRead_2_Click" Background="#FF77E67C" FontWeight="Bold" ToolTip="Read the folder with text files"/>
            <Button x:Name="btnGenerate_2" Content="Generate Excel file" Grid.Column="9" Grid.Row="16" Click="btnGenerate_2_Click" Background="#FF66B4EA" FontWeight="Bold" ToolTip="Write the Excel file 'ExportExcel.xlsx' in the folder"/>
            <DataGrid x:Name="dataGrid_2" Grid.Column="2" Grid.Row="14" Grid.ColumnSpan="6" Grid.RowSpan="5"/>
            <!-- <Label Grid.Row="12" Content="Extension :" Grid.Column="6" Foreground="Red" FontWeight="Bold"/> -->
            <TextBlock Text="Extension : " Grid.Row="12" Grid.Column="6" Foreground="Red" TextDecorations="Underline" FontWeight="Bold"/>
            <TextBox x:Name="txbExtension" Grid.Column="7" Grid.Row="12" TextWrapping="Wrap" Text=".txt" FontWeight="Bold"/>
            <Button Name="btnClose" Content="Close" Grid.Column="9" Grid.Row="20" Click="btnClose_Click" Background="#FFDE24CD" FontWeight="Bold"  ToolTip="Close the application"/>
            

        </Grid>

    </Grid>
</Window>
